package parser

type parser Peg {
}

Grammer <- Spacing* Query Spacing* EndOfFile
Query <- (Query Spacing+ BinaryOperator Spacing+ Query) / 
         (Query Spacing+ Query) / 
         BasicQuery

BasicQuery <- Text 

# Binary Operators
BinaryOperator <- Or / And / Xor
Or <- 'or'
And <- 'and'
Xor <- 'xor'

# Tokens
Spacing <- [ \r\n\t]+
Text <- ([[a-z0-9_]] / '-')+

EndOfFile <- !.
