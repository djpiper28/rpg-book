package parser

type parser Peg {
}

Grammer <- Query EndOfFile
Query <- Spacing* InnerQuery Spacing*
InnerQuery <- BasicQuery / 
              (Query Spacing BinaryOperator Spacing Query) / 
              (Query Spacing Query)

BasicQuery <- Text 

# Binary Operators
BinaryOperator <- Or / And / Xor
Or <- 'or'
And <- 'and'
Xor <- 'xor'

# Tokens
Spacing <- Space+
Space <- (' ' / '\t' / '\r\n' / '\n')
Text <- ([[a-z0-9_]] / '-')+

EndOfFile <- !.
